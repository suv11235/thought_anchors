# Model Configuration
REASONING_MODEL_NAME=deepseek-ai/deepseek-coder-33b-instruct
BASE_MODEL_NAME=deepseek-ai/deepseek-coder-33b-instruct
MODEL_CACHE_DIR=./models

# API Keys (if using cloud models)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Experiment Configuration
EXPERIMENT_SEED=42
NUM_ROLLOUTS=100
MAX_SEQUENCE_LENGTH=2048
BATCH_SIZE=4

# Data Paths
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
RESULTS_DIR=./data/results

# Logging and Monitoring
WANDB_PROJECT=thought-anchors
WANDB_ENTITY=your_wandb_username
LOG_LEVEL=INFO

# Hardware Configuration
DEVICE=cuda  # or cpu
NUM_WORKERS=4
MIXED_PRECISION=true

# Attention Analysis Configuration
ATTENTION_LAYERS=all  # or specific layer numbers like "0,1,2,3"
RECEIVER_HEAD_THRESHOLD=0.1
SUPPRESSION_MASK_VALUE=-1e9

# Visualization
PLOT_STYLE=seaborn
FIGURE_FORMAT=png
DPI=300 